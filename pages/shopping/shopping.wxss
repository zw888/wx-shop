.bottom-area{
}
/* 搜索 */
.input-box {
  display: flex;
  align-items: center;
  border: 1rpx solid #eee;
  background: #f3f5f7;
  border-radius: 15rpx;
  padding-right: 5px;
  margin: 0 20rpx;
  font-size: 26rpx;
}
.search-input{
  text-align: right;
  flex: 1;
}
.search-icon-box{
  padding:8rpx 12rpx;
}

/* 头部 */
.title{
  padding: 0 20rpx;
  margin: 30rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.checkbox-volumn{
  display: inline-block;
  border:none;
  background: #fff;
}

/* 种类 */
.class-box{
  padding: 0 20rpx;
}
.class-type{
  font-size: 28rpx;
  color: #666;
  height: 60rpx;
  white-space: nowrap;
}
.class-item{
  margin: 0 10rpx;
  padding: 2rpx 10rpx;
}
.class-item.active{
  background: #B229AA;
  color:#ffffff;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
}


/* 列表 */

.list-box{
  background: #f8f8f8;
  display: flex;
  flex-wrap: wrap;
}
.price-icon{
  width: 21rpx;
  height: 15rpx;
  margin-left: 15rpx;
  margin-right: 5rpx;
}
.desc{
  display: flex;
  align-items: center;
  margin-top: 15rpx;
  justify-content: space-between;
}
.old-price{
  color: #999;
  font-size: 20rpx;
}
.old-price .num{
  font-size: 20rpx;
  text-decoration: line-through;
}
.current-price{
  font-size: 24rpx;
  color:#B229AA;
}
.bold{
  font-weight: bold;
}
.left-desc{
  display: flex;
  align-items: center;
}
.text{
  color: #999;
  font-size: 20rpx;
}
.list-item{
  background: #fff;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  margin: 20rpx;
  border-radius: 8rpx;
  width: 335rpx;
  height: 400rpx;
}
.product-img{
  width: 200rpx;
  height: 200rpx;
}
.product-box{
  text-align: center;
}
.cart{
  width: 30rpx;
  height: 30rpx;
}
.cart-box{
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.cart-inner-box{
  background: #B229AA;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
}