page{
  background: #f8f8f8;
}
.bold{
  font-weight: bold;
}

/* swiper */
.img-box{
  width: 100%;
  overflow: hidden;
  height: 360rpx;
}
.slide-image{
  width: 100%;
  height: 360rpx;
}

/* 价格 */
.price-box{
  background: #fff;
  display: flex;
  justify-content: space-between;
  height: 70rpx;
  align-items: center;
  padding: 0 30rpx;
}
.vip-price-box{
  display: flex;
  align-items: center;
}
.vip-price{
  color: #b229aa;
}
.vip-icon{
  width: 21rpx;
  height: 15rpx;
  margin-left: 15rpx;
}
.vip-text{
  color: #9a9a9a;
  font-size: 20rpx;
}

/* 商品描述 */
.desc-box{
  background: #fff;
}
.desc-inner-box{
  margin: 0 30rpx;
  padding: 8px 0;
  border-top: 1px solid #eee;
}

.product-name{
  display: inline;
  margin-right: 15rpx;
}
.product-intr{
  display: inline;
  color: #9a9a9a;
  margin-right: 15rpx;
}


/* 规格 */
.size-box {
  background: #fff;
  margin: 30rpx 0;
  padding: 20rpx 30rpx;
}
.class-box{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.class-item{
  text-align: center;
  width: 166rpx;
  border: 1rpx solid #b229aa;
  border-radius: 8rpx;  
}

/* 代言人 */
.dyr-box{
  background: #fff;
  margin-top: 30rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.dyr-left-item{
  display: flex;
  align-items: center;
}
.dyr-icon{
  width: 120rpx;
  height: 28rpx;
  margin-right: 30rpx;
}
.right-icon{
  width: 15rpx;
  height: 22rpx;
}

/* 保障 */
.bz-box{
  background: #fff;
  border: 1rpx solid #eee;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bz-left-box{
  width: 600rpx;
  display: flex;
  justify-content: space-between;
}
.bz-class-item{
  display: flex;
  align-items: center;
}
.bz-class-icon{
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

/* 固定按钮 */

.fix-cart{
  position: absolute;
  background: #fff;
  right: 30rpx;
  bottom: 220rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #bbb;
}
.fix-return-top{
  position: absolute;
  right: 30rpx;
  bottom: 120rpx;
}
.fix-cart-icon{
  width: 30rpx;
  height: 30rpx;
}
.fix-return-icon{
  width: 64rpx;
  height: 64rpx;
}



/* 底部工具栏 */
.tool-box{
  position: fixed;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  bottom: 0;
  left:0;
  right:0;
  height: 100rpx;
  background: #fff;
}
.tool-left-box{
  display: flex;
  align-items: center;
}
.tool-right-box{
  display: flex;
  align-items: center;
}
.tool-item{
  text-align: center;
  font-size: 24rpx;
  height: 68rpx;
  margin-right: 40rpx;
}
.tool-home-icon{
  width: 32rpx;
  height: 32rpx;
}
.tool-cart-icon{
   width: 40rpx;
  height: 40rpx;
}
.tool-share-icon{
  width: 32rpx;
  height: 32rpx;
}
.tool-cart{
  border: 1rpx solid #eee;
  position: relative;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 65rpx;
  margin-right: 15rpx;
}
.tool-num{
  background: url('data:image/png;base64,');
  background-size: 100% 100%;
  background-position: center;
  font-size: 22rpx;
  color: #fff;
  position: absolute;
  left: -16rpx;
  top: -16rpx;
  width: 32rpx;
  line-height: 32rpx;
  text-align: center;
  border-radius: 50%;
  height: 32rpx;
}
.tool-submit{
  width: 252rpx;
  height: 68rpx;
}
.submit-icon{
  width: 100%;
  height: 100%;
}