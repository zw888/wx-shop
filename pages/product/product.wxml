<view class='product-page'>
    <view>
      <swiper  class='img-box' indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" mode='aspectFill' class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class='price-box'>
    <view class='pirce bold'>￥{{product.price}}</view>
    <view class='vip-price-box'>
      <text class='vip-price bold'>￥{{product.vipPirce}}</text>
      <view class='vip-text'>
        <image class='vip-icon' src='../../images/common/price_icon.png'></image>
        代言人价
        </view>
    </view>
  </view>
  
  <!-- 商品描述 -->
  <view class='desc-box'>
    <view class='desc-inner-box'>
       <view class='product-name bold'>即时燕窝</view>
        <view class='product-intr' wx:for='{{product.intrArr}}'>
          {{item.name}}
        </view>
    </view>
  </view>

  <!-- 规格 -->
  <view class='size-box'>
      <view class='title bold'>规格</view>

      <view class='class-box'>
        <view class='class-item' wx:for='{{["10g","50g","100g"]}}'>
          {{item}}
        </view>
      </view>
  </view>

</view>
